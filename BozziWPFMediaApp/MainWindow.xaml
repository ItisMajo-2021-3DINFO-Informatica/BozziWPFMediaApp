<Window x:Class="BozziWPFMediaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BozziWPFMediaApp"
        mc:Ignorable="d"
        Title="Calcola la media" Height="450" Width="300">
    <StackPanel>
        <Label Content="Inserisci un valore:"/>
        <TextBox x:Name="TxtValore"/>
        <Button x:Name="BtnSalvaValore" Click="BtnSalvaValore_Click" Content="Salva valore"/>
        <TextBlock x:Name="BlkValori" Height="200"/>
        <Button x:Name="BtnCalcolaMedia" Click="BtnCalcolaMedia_Click" Content="Calcola Media"/>
        <Label x:Name="LblRisultato"/>
        <Button x:Name="BtnCalcolaMassimo" Click="BtnCalcolaMassimo_Click" Content="Calcola Massimo"/>
        <Label x:Name="LblRisultatoMax"/>
    </StackPanel>
</Window>
